<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_margin="5dp"
    android:paddingBottom="10dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="10dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">


            <ImageView
                android:id="@+id/menu_item_image"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/food" />


            <TextView
                android:id="@+id/menu_item_recipe_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:background="#80000000"
                android:gravity="start"
                 android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="@string/recipe_name"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp">


                <TextView
                    android:id="@+id/menu_item__tv_recipe_steps_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="8dp"
                    android:layout_toStartOf="@+id/menu_item_img_recipe_steps"
                    android:text="@string/_10"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/menu_item_img_recipe_steps"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:padding="@dimen/pading_5"
                    android:src="@drawable/servings" />


                <TextView
                    android:id="@+id/menu_item__tv_recipe_servings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="8dp"
                    android:layout_toStartOf="@+id/menu_item_img_recipe_servings"
                    android:text="@string/_10"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/menu_item_img_recipe_servings"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="6dp"
                    android:layout_toStartOf="@id/menu_item__tv_recipe_steps_count"
                    android:padding="@dimen/pading_5"
                    android:src="@drawable/stepss" />

            </RelativeLayout>
        </RelativeLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>